title: Start
---

// Case selection
<<set $gender to "male">>
Select: [select {$gender} male="male" female="female" other="other"]

<<set $gender to "female">>
Select: [select {$gender} male="male" female="female" other="other"]

<<set $gender to "other">>
Select: [select {$gender} male="male" female="female" other="other"]

// Cardinal pluralisation
<<set $num to 1>>
Plural: [plural {$num} one="one" two="two" few="few" many="many" other="other"]

<<set $num to 2>>
Plural: [plural {$num} one="one" two="two" few="few" many="many" other="other"]

<<set $num to 3>>
